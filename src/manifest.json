{
  "manifest_version": 2,

  "name": "mantis notifier",
  "description": "This extension will send new bug notifications from mantis.",
  "version": "0.1",

  "background": {
    "scripts": ["background.js"]
  },

  "icons": {
    "128": "icon.png"
  },

  "permissions": [
    "notifications",
    "tabs",
    "alarms",
    "contextMenus",
    "cookies",
    "http://*/*",
    "https://*/*"
  ]
}
